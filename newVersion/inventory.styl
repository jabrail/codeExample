.inventory
	display flex
	flex-direction column
	
	&__dots
		display flex
		width 100%
		height 40px
	
	&__inventory
		display: flex;
		flex-wrap wrap
		background #fff
		width 98%
		height 98%
		margin-top 1%
		margin-left 1%
		border 1px solid #ddd
		
		&_with-dots
			margin-top 0
			

	md-table-container
		width 100%

	&__iframe
		width 100%

	&__visible
		overflow hidden
		width 100%
		height 100%
	&__unvisible
		position relative
		width 100%
		height 100%
		display flex
		justify-content center
	&__spinner
		left 0
		top 0
	&__spinner-hor
		width 65px
		height 100%
		display flex
		flex-direction column
		justify-content center

	&__spinner-ver
		width 65px
		height 65px
		display flex
		position relative

	&__progress
		width 100%
		height 1px

	&__fullscreen
		position fixed
		width 100%
		height 100%
		margin-top 0
		margin-left 0
		z-index 1300

	&__button
		padding 5px 15px
		height 30px
		padding 5px
		font-weight 600
		font-size 14px
		border none
		background-color #45AAF9
		color #fff
		text-transform uppercase
		margin-top -7px

	&__title
		text-align center
		height 40px
		position absolute
		display flex
		justify-content center
		flex-direction column
		
		&_left	
			left 30px
		&_right
			right 30px
		&_active h2
			color #4caf50 !important

	&__wraper
		width 100%
		height calc(100vh - 90px)
		overflow-y auto

	&__wraper-aside
		min-width 245px
		width 245px
		height calc(100vh - 90px)

		&_mobile
			position absolute
			display none
			width 245px
			height 100%
			z-index 2
		&_visible
			display block

	&__aside
		width 245px

		&_full-width
			width 100%

	&__aside-mobile-bg
		position absolute
		background #000
		opacity 0.4
		width 100%
		height 100%
		z-index 1

		&_white
			background #fff
			opacity 1
			width 245px

	&__menu-wrapper
		position absolute
		height 100%
		width 100%

	&__table
		width 98%
		margin-top 10px
		border 1px #999 solid

	&__table-row
		height 35px
		border-top: 1px solid #eee

	&__table-cell
		padding 0 6px 0 6px
		&_center
			text-align center

	&__side-bar
		width 200px
		background #eee
	&__search
		color #000
		height 30px
		padding 5px
		margin-top 4px
		margin-left 10px
		border solid 1px #dedede
		border-radius 2px

	&__new-item
		width $invWidth
		height 170px
		background #fff

	&__item
		display flex
		flex-wrap wrap
		align-content flex-start
		border-right 1px #eee solid
		border-bottom 1px #eee solid
		width 25%
		height 200px
		will-change scroll-position

		&_filter
			width calc(100% + 10px)
			height 40px
			margin-bottom 0px
			margin-top 2px
			margin-left -3px

		&_list
			width 100% !important
			height 40px

		&_custom
			display flex
			flex-direction row
			flex-wrap nowrap
			width 100% !important

			height 56px
			border 1px solid #000
			align-items center
			justify-content center
			align-self flex-start

			.new-custom-item_input
				height 40px
				width 120px
				margin-left 20px
				padding 5px
				&:focus
					border 1px solid #909000
			&.ng-submitted
				.new-custom-item_input
					&.ng-invalid, &.ng-invalid-required
						border 1px solid red

		&_novalid
			border 1px solid red
		&_focus
			border 1px solid #909000

	&__toolbar
		display flex
		height 50px
		padding 10px
		padding-top 0
		padding-bottom 30px
		color #000
		width 100%
		font-size 14px
		justify-content flex-start
		border-bottom 1px solid #ddd
	&__group
		display flex
		flex-wrap wrap
		align-content flex-start
		width 100%

	&__group-title
		width 100%
		height 40px
		padding 10px
		background #2392BA
		color #fff
		text-align center
		margin-bottom 15px
	&__toolbar-item
		padding-top 5px
		display flex
		font-weight 600
		&_info
			height 50px
			line-height 2.7
			margin-left 20px
		&_right
			position absolute
			right 0
		&_print-btn
			position absolute
			right 35px
		&_typical-item
			position absolute
			right 70px
	&__typical-button
		margin 0 6px
		height 40px
	&__row
		display flex
		width 100%
		margin-bottom 15px
		&_mobile
			display none
			height auto
		&_hidden
			height 0
		&_curren-room
			width: 99%

		&_absolute
			display none
			position absolute
			overflow hidden
			background #fff
			z-index 100
			box-shadow 0px 0px 20px 0px #aaa
			transition all 0.3s
			max-height 600px
			width 97%

	&__inventory-items
		width calc(100% - 20px)
		margin-left 10px
		margin-right 10px
		overflow none
		display flex
		flex-wrap wrap
		align-content flex-start
		border-left 1px #eee solid
		border-top 1px #eee solid

	&__selected-room
		height 40px
		margin-top -15px
		padding 10px 0
		border-bottom 1px solid #eee
		width 100%
		text-align center
		cursor pointer
		display flex
		position relative
		justify-content center
		&_clicked
			span
				transform scale(0.9, 0.9)

	&__selected-room-arrow
		position absolute
		margin-top -10px !important

		&_left
			left -6px

		&_rigth
			right 10px

.inventory-print
	position absolute
	margin 0
	font-family Arial, Helvetica, sans-serif
	&__title
		width 100%
		position relative
	&__title-nid
		display block
		margin-bottom 4 m
	&__title-label
		display block
		margin-bottom 4mm
	&__total-row
		margin-bottom 4mm
		width 100%
		float: left
		position: relative
		min-height: 1mm
	&__total-row-item
		display inline-block
		padding-right 5mm
	&__list-pages
		height 100vh
		float left
		padding-right 5mm
		padding-left 5mm
	&__one-column-page
		width 33%
	&__two-column-page
		width 66%
		columns 10mm 2
	&__three-column-page
		width 100%
		columns 10mm 3
	&__inv-result
		width 100%
		color: #1f1f1f
		padding-bottom 1mm
		margin-bottom 1mm
		padding-left: 0
		padding-right: 0
	&__inv-result-title
		width 75%
		border-bottom 0.1mm solid black
		font-weight: 700 !important
		padding 0
		float left
		position: relative
		min-height: 1px
	&__inv-result-title-right
		width 25%
		border-bottom 0.1mm solid black
		position relative
		text-align: right
		padding 0
		font-weight 700 !important
		float left
		min-height 1px
	&__selected-items-list-element
		width 100%
		padding 0
	&__inv-item
		width 100%
		padding 0
	&__inv-title-items
		display inline-block
		color: #0e0e0e
		width: 75%
		height: 6mm
		overflow: hidden
		float: left
		padding 0
		position: relative
	&__inv-total
		display inline-block
		text-align: right
		width 25%
		float left
		padding 0

@media print
	.modal
		overflow visible !important
		overflow-x visible !important
		overflow-y visible !important

	.modal-content
		overflow visible !important

	.modal-header
		display none

@media screen and (max-width: 2000px)
	.inventory__item
		width 20%

	.inventory__item_filter
		width calc(100% + 10px)

@media screen and (max-width: 1580px)
	.inventory__item
		width 25%

	.inventory__item_filter
		width calc(100% + 10px)

@media screen and (max-width: 900px)
	.inventory__item
		width 33.3%

	.inventory__item_filter
		width calc(100% + 10px)

@media screen and (max-width: 700px)
	.inventory__item
		width 50%

	.inventory__item_filter
		width calc(100% + 10px)

@media screen and (max-width 1224px)
	.inventory__wraper-aside
		display none

	.inventory__row_mobile
		display block

	.inventory__wraper-aside_visible
		display block
		
.modal-inventory
	width 98%